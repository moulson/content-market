<%= render 'layouts/navbar' %>
<p id="notice"><%= notice %></p>
<div class="post-container">
	<h1><%= @post.title %>
	<div class="post-content">
		<%= raw @post.content %>
	</div>
</div>


<% if current_user then %>
	<%= link_to 'Edit', edit_post_path(@post), class: 'btn' %>
	<%= link_to 'Back', posts_path, class: 'btn' %>
<% end %>
